<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/gps"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="25dp"

        android:layout_height="25dp"
        android:src="@drawable/pin_1"
        />
    <ImageView
        android:layout_width="85dp"
        android:backgroundTint="@color/red"
        app:layout_constraintStart_toStartOf="@id/gps"
        app:layout_constraintEnd_toEndOf="@id/gps"
        android:src="@drawable/dots"
        android:scaleType="centerCrop"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/gps"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/branchName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/alqudra_branch"
        android:textSize="18sp"
        android:fontFamily="@font/medium"
        app:layout_constraintStart_toEndOf="@+id/gps"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1:00 Pm"
        android:textSize="18sp"
        android:fontFamily="@font/medium"
        app:layout_constraintStart_toEndOf="@+id/gps"
        app:layout_constraintTop_toBottomOf="@id/branchName" />
</androidx.constraintlayout.widget.ConstraintLayout>